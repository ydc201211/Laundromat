<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="no_title" parent="Theme.AppCompat.NoActionBar">

        <!-- 沉浸式状态栏 -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!--标题栏文字-->
    <style name="Titlebar_Center_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 标题栏搜索框 -->
    <style name="Titlebar_EditText">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <!--底部导航-->
    <style name="RadioButtonBottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>

        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/txtcolor_gray2blue_sel</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="RadioButton_Book">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>

        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>




    <style name="person_tv">

        <item name="android:textColor">@color/black_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="RadioButton_Pay">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/black_1</item>

        <item name="android:textSize">12sp</item>


        <item name="android:background">@color/white</item>
    </style>



    <!--进度框-->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--选择框-->
    <style name="SelectDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->

        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>


    <style name="RadioButton_edit_person">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/black_1</item>

        <item name="android:textSize">12sp</item>

        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>



    <style name="po" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->

        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
