<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/titlebar_blue"
    android:fitsSystemWindows="true"
    tools:context="com.ydc.laundromat.activity.BookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1"
        android:gravity="center"
        android:orientation="vertical">


        <!-- 导入标题栏 -->
        <include layout="@layout/include_titlebar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_height="120dp">
                <LinearLayout

                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/book_wm_no"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text="01"
                        android:gravity="center"
                        android:background="@drawable/circle_textview"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_height="120dp"
                    android:layout_width="0dp"
                    android:layout_weight="7">
                    <TextView
                        android:id="@+id/book_wm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:text="理工大学1栋 竹轩"
                        android:textColor="@color/black_1"
                        android:textSize="20dp"/>

                    <LinearLayout
                        android:id="@+id/book_wm_status_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/book_wm_name"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/icon_book_wm_status"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_available_blue"/>

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/book_wm_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_1"
                            android:text="空闲"
                            android:textSize="12dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/book_wm_status_ll"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/icon_book_wm_address"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_position_blue"/>
                        <TextView
                            android:id="@+id/book_wm_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="竹轩洗衣体验中心"
                            android:textColor="@color/blue_1"
                            android:textSize="13dp"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_small_type"/>
                    <TextView
                        android:id="@+id/book_clothe_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_1"
                        android:layout_marginLeft="6dp"
                        android:text="标准"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_small_money"/>
                    <TextView
                        android:id="@+id/book_wm_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/red_1"
                        android:layout_marginLeft="6dp"
                        android:text="4.00"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_small_time"/>
                    <TextView
                        android:id="@+id/book_wm_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_1"
                        android:layout_marginLeft="6dp"
                        android:text="32分钟"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_2"/>

            <RadioGroup
                android:id="@+id/book_rg_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_biaozhun"
                    style="@style/RadioButton_Book"

                    android:text="标准"
                    android:drawableTop="@mipmap/p09_bl_biaozhun"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_2"/>
                <RadioButton
                    android:id="@+id/rb_dawu"
                    style="@style/RadioButton_Book"
                    android:text="大物"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/p09_bl_dawu"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_2"/>
                <RadioButton
                    android:id="@+id/rb_kuaisu"
                    style="@style/RadioButton_Book"
                    android:text="快速"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/p09_bl_kuaisu"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_2"/>
                <RadioButton
                    android:id="@+id/rb_dantuo"
                    style="@style/RadioButton_Book"
                    android:text="单脱"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/p09_bl_dantuo"/>
            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_small_question"
                android:adjustViewBounds="false" />
            <TextView
                android:id="@+id/book_wm_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般洗衣程序"
                android:layout_margin="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_1"
                android:textSize="10sp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
           <TextView
               android:id="@+id/book_wm_btn"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="立即下单"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="20sp"
               android:layout_gravity="bottom"
               android:background="@drawable/shape_book_btn"
               android:layout_margin="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
