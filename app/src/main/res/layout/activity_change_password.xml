<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/titlebar_blue"
    android:fitsSystemWindows="true"
    tools:context="com.ydc.laundromat.activity.ChangePasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1"
        android:gravity="center"
        android:orientation="vertical">


        <!-- 导入标题栏 -->
        <include layout="@layout/include_titlebar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/change_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入旧密码"
                android:textColor="@color/black_1"
                android:textColorHint="@color/gray_4"
                android:textSize="15sp"
                android:layout_margin="10dp"

                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="5dp"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/new_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入新密码"
                android:textSize="15sp"
                android:textColor="@color/black_1"
                android:textColorHint="@color/gray_4"
                android:drawableLeft="@drawable/ic_24dp_new_password"
                android:layout_margin="10dp"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/sure_new_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="确认新密码"
                android:textSize="15sp"
                android:textColor="@color/black_1"
                android:textColorHint="@color/gray_4"
                android:drawableLeft="@drawable/icon_sure_password"
                android:layout_margin="10dp"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:maxLength="11"
                android:singleLine="true" />
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/change_password_button"
                android:background="@color/titlebar_blue"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="修改密码"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        </LinearLayout>
   </LinearLayout>
</RelativeLayout>
