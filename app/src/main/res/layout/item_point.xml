<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="80dp">
    <LinearLayout
        android:id="@+id/point_status_ll"
        android:layout_height="80dp"
        android:layout_width="5dp"
        android:orientation="vertical"
        android:background="@color/titlebar_blue"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/icon_point"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/guntong_machine"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="80dp"
        android:layout_width="0dp"
        android:layout_weight="5">
        <TextView
            android:id="@+id/point_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="理工大学1栋 竹轩"
            android:textColor="@color/gray_4"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/point_name"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_machine_blue"/>
            <TextView
                android:id="@+id/point_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignLeft="@id/point_name"
                android:textColor="@color/blue_1"
                android:text="9台空闲"
                android:textSize="14dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/point_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:textColor="@color/gray_4"
            android:text="9米"
            android:textSize="15dp"/>
    </RelativeLayout>

</LinearLayout>