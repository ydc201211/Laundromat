<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="30.0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:textSize="18.0dip"
            android:textColor="@color/white"
            android:background="@drawable/shape_dialog_top"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:text="提示"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <TextView
                android:id="@+id/message"
                android:textSize="16.0dp"
                android:textColor="#ff666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text="是否删除？"
                android:minHeight="100.0dip" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_dialog_bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/positiveButton"
                android:textSize="15.0dip"
                android:textColor="#ffffffff"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:background="@color/titlebar_blue"
                android:gravity="center"
                android:text="确定" />

            <Button
                android:id="@+id/negativeButton"
                android:textSize="15.0dip"
                android:textColor="#ff666666"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:background="@color/white"
                android:gravity="center"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>